---
import AboutExperience from "../../components/about-experience.astro";
import PageHeading from "../../components/page-heading.astro";

import { getI18N } from "../../i18n";
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
        title={i18n.ABOUT_ME.TITLE}
        description=`${i18n.ABOUT_ME.DESCRIPTION_PART_1}${i18n.ABOUT_ME.DESCRIPTION_PART_2}
        
        ${i18n.ABOUT_ME.DESCRIPTION_PART_3}
        
        ${i18n.ABOUT_ME.DESCRIPTION_PART_4}
        `
    />

    <img src="/assets/images/Big Banner Manuel Ramallo.png" class="relative z-30 w-full my-10 rounded-xl border" />

    <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">{i18n.ABOUT_ME.SHORT_BIO_TITLE}</h2>
    <p
        class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
    üßëüèª‚Äçüíª <b class="italic">{i18n.ABOUT_ME.SHORT_BIO_PART_1}</b> ü§ñ {i18n.ABOUT_ME.SHORT_BIO_PART_2} <b class="italic">{i18n.ABOUT_ME.SHORT_BIO_PART_3}</b> {i18n.ABOUT_ME.SHORT_BIO_PART_4}
    </p>

    <h2
        class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
        {i18n.ABOUT_ME.EXPERIENCE_TITLE}
    </h2>
    <div class="px-6 py-10">
        {
        i18n.ABOUT_ME.EXPERIENCE_LIST.map((experience) => {
            return (
            <div class="pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
                <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
                />
            </div>
            )
        })
        }
    </div>

    <h2 class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">{i18n.ABOUT_ME.LETS_CONNECT_TITLE}</h2>
    <p
        class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
        {i18n.ABOUT_ME.LETS_CONNECT_PART_1} <a
        href="https://www.linkedin.com/in/manuelramallodiaz/"
        target="_blank"
        class="text-indigo-600 underline">{i18n.ABOUT_ME.LETS_CONNECT_PART_2}</a
        >{i18n.ABOUT_ME.LETS_CONNECT_PART_3} <a href="mailto:mramallodiaz96@gmail.com" target="_blank" class="text-indigo-600 underline"
        >email</a
        > {i18n.ABOUT_ME.DESCRIPTION_PART_4}
    </p>
</section>